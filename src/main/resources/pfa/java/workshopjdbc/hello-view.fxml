<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pfa.java.workshopjdbc.Controllers.HelloController">
   <TableView fx:id="userTable">
      <columns>
         <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
         <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
      </columns>
   </TableView>

   <TextField fx:id="nameField" promptText="Enter name" />
   <TextField fx:id="emailField" promptText="Enter email" />

   <Button text="Ajouter User" onAction="#handleAddUser" />
   <Button text="Modifier User" onAction="#handleUpdateUser" />
   <Button text="Supprimer User" onAction="#handleDeleteUser" />
</VBox>